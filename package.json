{
  "name": "launcher",
  "version": "1.0.8",
  "description": "VRC Launcher",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "VR Centre Pty Ltd",
  "license": "ISC",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "Nobel90",
      "repo": "VRC_Launcher",
      "private": true
    },
    "appId": "com.vrc.launcher",
    "productName": "VRC-Launcher",
    "win": {
      "target": "nsis",
      "icon": "assets/icon-white_s.ico",
      "forceCodeSigning": true,
      "signtoolOptions": {
        "certificateSubjectName": "VR Centre Pty Ltd"
      }
    },
    "artifactName": "${productName}-Setup.${ext}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon-white_s.ico",
      "uninstallerIcon": "assets/icon-white_s.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp",
      "include": "build/installer.nsh"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "firebase": "^11.10.0",
    "npm": "^11.4.2"
  }
}